<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hxg.u1.xiaoyuan.activity.WelcomeActivity">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="130dp"
            android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/location_ico"/>

                <TextView
                    android:id="@+id/welcome_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在定位中。。"
                    android:paddingTop="1.5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/Wathet"/>
        </LinearLayout>
        <Button
            android:id="@+id/welcome_login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn_style"
            android:text="登陆"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/welcome_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新用户注册"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:textColor="@color/Wathet"
            android:background="@drawable/hollow_btn_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

</LinearLayout>
