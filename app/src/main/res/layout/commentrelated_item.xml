<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/comment_related_item_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/touxaing"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/comment_related_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comment_related_item_iv"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/comment_related_item_iv"
            android:text="sum"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回复了"
            android:layout_above="@+id/comment_related_item_date"
            android:layout_toEndOf="@+id/comment_related_item_name"
            android:layout_marginStart="17dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/comment_related_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/comment_related_item_name"
            android:layout_below="@+id/comment_related_item_name"
            android:layout_marginTop="5dp"
            android:text="2017年2月30号 23:32"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_related_item_content"
        android:paddingBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="hi 今晚去吃个饭吧"/>
</LinearLayout>