<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hxg.u1.xiaoyuan.activity.GuideActivity">
    <com.hxg.u1.xiaoyuan.utils.ColorAnimationView
        android:id="@+id/guide_colorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/guide_start"
        android:layout_width="150.0dip"
        android:layout_height="43.0dip"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="15.0dip"
        android:background="@drawable/guide_start_btn_selector"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:textColor="@color/white"
        android:visibility="gone"/>
</FrameLayout>
